<WindowsFormsHost x:Class="IFSEngine.WPF.InteractiveDisplay.InteractiveDisplay"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFSEngine.WPF.InteractiveDisplay"
             xmlns:tk="clr-namespace:OpenTK.WinForms;assembly=OpenTK.GLControl"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             SizeChanged="WindowsFormsHost_SizeChanged">
    <tk:GLControl x:Name="GLControl1"
                  MouseDown="GLControl1_MouseDown"
                  MouseMove="GLControl1_MouseMove"
                  MouseWheel="GLControl1_MouseWheel"/>
</WindowsFormsHost>
